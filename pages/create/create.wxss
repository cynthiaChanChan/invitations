.container {
  padding: 0 2%;
}

.chooser {
  position: fixed;
  padding: 30rpx 0;
  width: 96%;
  top: 0;
  left: 2%;
  right: 2%;
  background-color: #fbfbfb;
}

.chooser .choiceWrapper {
  width: 20%;
  display: inline-block;
  vertical-align: top;
}

.chooser .choice {
  position: relative;
  border: 1px solid rgba(0,0,0,.3);
  margin: 0 auto;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  -webkit-transition: all .2s;
  transition: all .2s;
}

.chooser .choice.active {
  border: 8rpx solid #fff;
  -webkit-transform: scale(1.2, 1.2);
  transform: scale(1.2, 1.2);
  -webkit-box-shadow: rgba(0,0,0,0.5) 0 0 10rx;
  box-shadow: rgba(0,0,0,0.5) 0 0 10rpx;
}

.chooser .choice .typeName {
  position: absolute;
  top: 50%;
  left: 0;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  width: 100%;
}

.gallery {
  padding-top: 180rpx;
}

.gallery .imgWrapper {
  width: 50%;
  margin: 20rpx 0;
  display: inline-block;
  vertical-align: top;
}

.gallery .imgWrapper image{
  margin: auto;
  width: 320rpx;
  height: 568rpx;
  border: 1px solid #D9DDE0;
  border-radius: 8rpx;
}

.gallery .imgWrapper .buttons {
  text-align: center;
  margin: 0 auto;
  width: 320rpx;
  color: #fff;
  font-size: 30rpx;
}

.gallery .imgWrapper .buttons .button {
  height: 70rpx;
  line-height: 70rpx;
  margin-bottom: 20rpx;
}
