page {
	width: 100%;
  height: 100%;
}

.page {
	position: relative;
	width: 100%;
  height: 100%;
}
.acceptanceForm {
	position: absolute;
	bottom: 50rpx;
	left: 0;
	width: 100%;
}

.acceptanceForm .outerWrapper {
	border: 10rpx solid rgba(255,255,255,.7);
	padding: 15rpx;
	width: 85%;
	margin: 0 auto 30rpx auto;
	border-radius: 8rpx;
}

.acceptanceForm .outerWrapper .wrapper {
   background-color: rgba(255,255,255,.7);
	 padding: 30rpx;
	 border-radius: 8rpx;
}


.acceptanceForm input {
	text-align: center;
	font-size: 32rpx;
	margin: 0 auto;
	width: 100%;
}

.acceptanceForm input:nth-of-type(2) {
	margin: 30rpx auto 0 auto;
}

.acceptanceForm .button {
	margin: 0 auto;
	border-radius: 8rpx;
	text-align: center;
	line-height: 1;
	width: 33%;
	padding: 20rpx 0;
	font-size: 30rpx;
	background-color: rgba(255,255,255,.6);
}

.hint {
	position: absolute;
	left: 50%;
	top: 50%;
	-webkit-transform: translate(-50%, -50%);
	border-radius: 8rpx;
	line-height: 1.3;
	width: 50%;
	padding: 50rpx 30rpx;
	font-size: 35rpx;
	color: #e51873;
	border: 1px solid #e51873;
	background-color: rgba(255,255,255,.6);
}

.envolopeWrapper {
  position: absolute;
  width: 90%;
  top: 10%;
	left: 2%;
}

.envolopeWrapper image {
  width: 100%;
}

.envolopeWrapper .top {
  display: block;
}

.envolopeWrapper .bottom {
  display: block;
  border-bottom-right-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}

.envolopeWrapper .body {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 3;
  border-bottom-right-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}

.envolopeWrapper .card {
  width: 100%;
  position: absolute;
  bottom: -30rpx;
  left: 5%;
  z-index: 4;
  border-radius: 15rpx;
}

.envolopeWrapper .card .postWrapper {
	position: absolute;
	right: 20rpx;
	top: 20rpx;
	width: 113rpx;
	height: 150rpx;
}

.envolopeWrapper .card .post{
	width: 100%;
	height: 100%;
}

.envolopeWrapper .card .bg {
	position: absolute;
	right: 15rpx;
	top: 15rpx;
	width: 83rpx;
	height: 120rpx;
}

.envolopeWrapper .card .postmark {
	position: absolute;
	top: 50%;
	left: -90%;
	-webkit-transform: translateY(-50%);
	-transform: translateY(-50%);
	width: 150rpx;
}

.envolopeWrapper .card .content {
	position: absolute;
	top: 180rpx;
	left: 30rpx;
	font-size: 30rpx;
	color: #fff;
}

.footer {
	background-color: rgba(255,255,255,.6);
	bottom: 0;
}
