page {
	width: 100%;
  height: 100%;
}

.page {
	position: relative;
	width: 100%;
  height: 100%;
}
.acceptanceForm {
	position: absolute;
	bottom: 50rpx;
	left: 0;
	width: 100%;
}

.acceptanceForm input {
	text-align: center;
	font-size: 32rpx;
	margin: 15rpx auto;
  max-width: 70%;
}

.acceptanceForm input:nth-of-type(2) {
	margin: 30rpx auto;
}

.acceptanceForm .button {
	margin: 0 auto;
	border-radius: 8rpx;
	text-align: center;
	line-height: 1;
	width: 33%;
	padding: 20rpx 0;
	font-size: 30rpx;
	background-color: rgba(255,255,255,.6);
}

.hint {
	position: absolute;
	left: 50%;
	top: 50%;
	-webkit-transform: translate(-50%, -50%);
	border-radius: 8rpx;
	line-height: 1.3;
	width: 50%;
	padding: 50rpx 30rpx;
	font-size: 35rpx;
	color: #e51873;
	border: 1px solid #e51873;
	background-color: rgba(255,255,255,.6);
}
